<UserControl x:Class="CDM_Lab_3._1.Controls.ControlNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CDM_Lab_3._1.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="40">
    <Border x:Name="NodeBorder"
        Width="40"
        Height="40"
        CornerRadius="20"
        Background="#212124"
        BorderThickness="1"
        BorderBrush="White" MouseDown="NodeBorder_MouseDown" MouseMove="NodeBorder_MouseMove" MouseUp="NodeBorder_MouseUp" MouseRightButtonDown="NodeBorder_MouseRightButtonDown">
        <TextBlock x:Name="Text" TextAlignment="Center" Text="x0" FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Border>
</UserControl>
