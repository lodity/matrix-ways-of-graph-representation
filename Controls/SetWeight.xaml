<UserControl x:Class="CDM_Lab_3._1.Controls.SetWeight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CDM_Lab_3._1.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="160">
    <StackPanel Orientation="Horizontal">
        <TextBlock x:Name="NodeFrom" Width="20" TextAlignment="Center"/>
        <TextBlock Text="&#x2194;"/>
        <TextBlock x:Name="NodeTo" Width="20" TextAlignment="Center"/>
        <TextBlock Text=" : "/>
        <TextBlock x:Name="Edge" Width="20" TextAlignment="Center"/>
        <TextBlock Text=" : "/>
        <TextBlock x:Name="Weight" Width="20" TextAlignment="Center"/>
        <Button x:Name="Decrement" Background="#c20704" FontSize="24" Padding="0 -10 0 0" Width="20" Click="Decrement_Click">-</Button>
        <Button x:Name="Increment" Background="#04c237" FontSize="14" Padding="0 -4 0 0" Width="20" Click="Increment_Click">+</Button>
    </StackPanel>
</UserControl>
